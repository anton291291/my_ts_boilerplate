{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "es6",
        "noEmit": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "downlevelIteration": true,
        "diagnostics": true
    },
    "include": ["./src/"],
    "exclude": ["node_modules", "build"]
}
